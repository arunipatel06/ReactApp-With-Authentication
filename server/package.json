{
  "name": "react-recipes",
  "version": "1.0.0",
  "description": "A starter for React-Apollo-GraphQL projects",
  "main": "server.js",
  "scripts": {
    "server": "node src/server.js",
    "client": "cd client && npm start",
    "dev": "concurrently --names \"server,client\" \"npm run server --silent\" \"npm run client --silent\""
  },
  "keywords": [
    "express",
    "expressjs",
    "service"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.14.4",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "concurrently": "^3.5.1",
    "cors": "^2.8.5",
    "dotenv": "^5.0.1",
    "express": "^4.17.1",
    "graphql": "^15.1.0",
    "jsonwebtoken": "^8.2.1",
    "mongodb": "^3.6.4",
    "mongoose": "^5.1.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/compression": "^1.7.0",
    "@types/config": "0.0.36",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/node": "^14.0.13",
    "@types/winston": "^2.4.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "prettier": {
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "printWidth": 100,
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": false,
      "codeFrame": false
    },
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "pretty-quick --staged"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "config"
    ]
  },
  "engines": {
    "node": "14"
  }
}
